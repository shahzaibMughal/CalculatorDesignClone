<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/rippleColor</item>

    </style>

    <style name="calculator_number_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/calculator_number_button_text_size</item>
        <item name="android:textColor">@android:color/white</item>

    </style>


    <style name="calculator_math_operator_button_style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/calculator_math_operator_button_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/calculator_math_operator_button_padding</item>

    </style>


    <style name="calculator_scientific_operator_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>

        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/calculator_scientific_operator_button_text_size</item>
        <item name="android:textColor">@color/calculator_scientific_operator_button_text_color</item>
        <item name="android:padding">@dimen/calculator_math_operator_button_padding</item>
        <item name="android:textAllCaps">false</item>

    </style>


    <style name="calculator_equation_holder_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textSize">@dimen/calculator_equation_holder_tv_text_size</item>
        <item name="android:textColor">@color/calculator_equation_holder_text_color</item>
        <item name="android:padding">@dimen/content_key_line</item>

    </style>

</resources>
